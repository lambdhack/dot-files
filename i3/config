# border & title.. Must be set to border pixel for gaps to work
for_window [class="^.*"] border pixel 0, title_format "<b> %class >> %title </b>"

# gaps
gaps inner 0
gaps outer 0

# font
font pango:SauceCodePro Nerd Font Mono:style=Bold 7

# $Mod = Super or Alt?
set $Mod Mod4
#set $Mod Mod1

# direction keys
